<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.softnhard.dragon.gpiocontrol.MainActivity">

    <EditText
        android:id="@+id/outputText"
        android:layout_width="356dp"
        android:layout_height="151dp"
        android:layout_weight="1"
        android:editable="true"
        android:ems="10"
        android:enabled="false"
        android:fadeScrollbars="true"
        android:gravity="bottom"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:text="Init..."
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="Deprecated,LabelFor,MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMode" />

    <Button
        android:id="@+id/btnMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btnTurnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintLeft_toRightOf="@+id/btnMode"
        android:layout_marginLeft="15dp" />

    <Button
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:text="Test"
        app:layout_constraintLeft_toRightOf="@+id/btnTurnOff"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>
